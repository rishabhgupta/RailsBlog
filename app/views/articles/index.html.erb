 <div class="jumbotron" style="background-color:#54BC90">
  <div class="container">
    <div class="row">
      <div class="col-sm-10">
         <h6>User: <%= current_user.email %></h6> 
      </div>
      <div class="col-sm-2">
        <p style="float:right;">
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-default" %>
        </p>
      </div>
    </div>
   
    <h1>My Blog</h1> 
    <p>Article Index</p>
  </div>
</div>
<div class="col-sm-12">
  <div class="container">
    <p>
      <%= link_to 'New Article' , new_article_path %>
    </p>
    <table class="table-active table">
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="2"></th>
      </tr>
      <% @article.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text%></td>
          <td><%= link_to 'Show', article_path(article), class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </table>

  </div>
</div>
