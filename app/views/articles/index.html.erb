<% @page_title = "Article - Index" %>
<%= render 'application/nav'%>
<%= render 'header'%>
    <p>Article Index</p>
  </div>
</div>
<div class="col-sm-12">
  <div class="container">
    <p>
      <%= link_to 'New Article' , new_article_path %> | 
      <%= link_to('Blog Settings', {:controller => 'blogs', :action => 'show', :id => params[:id]}) %>
    </p>
    <table class="table-active table">
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3">Actions</th>
      </tr>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= truncate(article.text, :length => 100)%></td>
          <td><%= link_to 'Show', article_path(article), class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </table>

  </div>
</div>
